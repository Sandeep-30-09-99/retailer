    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/drawer_color</item>
        <item name="colorOnPrimary">@color/drawer_color</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/drawer_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppThemeOne" parent="AppTheme">
        <item name="colorAccent">@color/transparent</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/top_cornered_shape</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="EditTextSmallBold" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="EditTextSmallMedium" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lines">1</item>
        <item name="singleLine">true</item>
        <item name="hintTextColor">@color/edit_text_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>
    <!--<item name="android:background">@drawable/edit_back_view</item>-->

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/_2sdp</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.Dash">
        <item name="android:layout_height">@dimen/_55sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:background">@drawable/back_slot</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_25ssp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="TextView.Title.Small">
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <style name="TextView.Header">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_27ssp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="TextView.SubHeader">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="TextView.Bold">
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="TextView.Regular">
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="TextView.Light">
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ubuntu_light</item>
    </style>

    <style name="TextView.Small">
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="TextView.SmallBold">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="TextView.MediumSemibold">
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="TextView.Regular.Black">
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="TextView.Semibold">
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.SelectedCornerRadius" parent="">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
    </style>

    <style name="Corner10" parent="ShapeAppearanceOverlay.App.SelectedCornerRadius">
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>

    <style name="CornerCircular" parent="ShapeAppearanceOverlay.App.SelectedCornerRadius">
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeBottomLeft">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/color_17</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Dialog.Window</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="Dialog.Window" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/zoom_normal</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>

    <style name="popupMenuStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:itemBackground">@color/night_color</item>
        <item name="android:divider">@color/text_color_333333</item>
        <item name="android:dividerHeight">@dimen/_2sdp</item>
    </style>

</resources>
